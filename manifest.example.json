{
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon16.png",
    "default_title": "vk messages stats."
  },
  "description": "Статистика личных сообщений и визуализация общения в Вконтакте",
  "manifest_version": 3,
  "name": "VK Messages Visual Statistics",
  "short_name": "VK Visual Stats",
  "minimum_chrome_version": "27",
  "permissions": [
    "tabs", "storage", "unlimitedStorage"
  ],
  "host_permissions": [
		  "*://*.userapi.com/*", 
		  "*://api.vk.com/*", 
		  "*://*.vk.me/*", 
		  "*://vk.com/images/*" 
  ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.1.8"
}
